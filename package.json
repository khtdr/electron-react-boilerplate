{
  "name": "itchy-molecule",
  "productName": "itchy-molecule",
  "version": "1.0.0",
  "description": "electron react/redux with hot reloading, electron forge for transpiling and builds,  and ava for testing",
  "main": "src/main.js",
  "scripts": {
    "start": "NODE_ENV=development electron-forge start",
    "package": "electron-forge package",
    "test": "ava",
    "make": "electron-forge make",
    "lint": "eslint src",
    "clean": "rimraf out"
  },
  "keywords": ["electron", "electron-forge", "hmr", "hot-reloading", "react", "redux", "ava"],
  "author": "oh kay",
  "license": "MIT",
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "squirrel"
        ],
        "darwin": [
          "zip"
        ],
        "linux": [
          "deb",
          "rpm"
        ]
      },
      "electronPackagerConfig": {
        "packageManager": "yarn"
      },
      "electronWinstallerConfig": {
        "name": "itchy-molecule"
      },
      "electronInstallerDebian": {},
      "electronInstallerRedhat": {},
      "github_repository": {
        "owner": "",
        "name": ""
      },
      "windowsStoreConfig": {
        "packageName": "",
        "name": "itchy-molecule"
      }
    }
  },
  "dependencies": {
    "electron-compile": "^6.4.1",
    "electron-debug": "^1.4.0",
    "electron-devtools-installer": "^2.2.0",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2"
  },
  "devDependencies": {
    "@ava/babel-preset-stage-4": "^1.1.0",
    "@ava/babel-preset-transform-test-files": "^3.0.0",
    "ava": "^0.22.0",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-register": "^6.26.0",
    "devtron": "^1.4.0",
    "electron-forge": "^4.0.2",
    "electron-prebuilt-compile": "1.7.5",
    "eslint": "^3",
    "eslint-config-airbnb": "^15",
    "eslint-plugin-import": "^2",
    "eslint-plugin-jsx-a11y": "^5",
    "eslint-plugin-react": "^7",
    "react-hot-loader": "^3.0.0-beta.7",
    "react-test-renderer": "^15.6.1",
    "rimraf": "^2.6.1"
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "babel": {
    "presets": [
      "react",
      "@ava/stage-4",
      "@ava/transform-test-files"
    ]
  }
}
