{
  "name": "itchy-molecule",
  "productName": "itchy-molecule",
  "version": "1.0.0",
  "description": "electron react/redux with hot reloading, electron forge for transpiling and builds",
  "main": "src/main.js",
  "scripts": {
    "start": "NODE_ENV=development electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "lint": "eslint --cache --color --ext .jsx,.js src",
    "clean": "rimraf out"
  },
  "keywords": [
    "electron",
    "electron-forge",
    "hmr",
    "hot-reloading",
    "react",
    "redux"
  ],
  "author": "oh kay",
  "license": "MIT",
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "squirrel"
        ],
        "darwin": [
          "zip"
        ],
        "linux": [
          "deb",
          "rpm"
        ]
      },
      "electronPackagerConfig": {
        "packageManager": "yarn"
      },
      "electronWinstallerConfig": {
        "name": "itchy-molecule"
      },
      "electronInstallerDebian": {},
      "electronInstallerRedhat": {},
      "github_repository": {
        "owner": "",
        "name": ""
      },
      "windowsStoreConfig": {
        "packageName": "",
        "name": "itchy-molecule"
      }
    }
  },
  "dependencies": {
    "electron-compile": "^6",
    "react": "^16",
    "react-dom": "^16",
    "react-hot-loader": "^4",
    "react-redux": "^5",
    "redux": "^4"
  },
  "devDependencies": {
    "babel-plugin-transform-async-to-generator": "^6",
    "babel-preset-env": "^1",
    "babel-preset-react": "^6",
    "babel-register": "^6",
    "electron-debug": "^2",
    "electron-devtools-installer": "^2",
    "electron-forge": "^5",
    "electron-prebuilt-compile": "3.0.2",
    "eslint": "^5",
    "eslint-config-airbnb": "^17",
    "eslint-plugin-import": "^2",
    "eslint-plugin-jsx-a11y": "^6",
    "eslint-plugin-react": "^7",
    "redux-logger": "^3",
    "rimraf": "^2"
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "babel": {
    "presets": [
      "react"
    ]
  }
}
